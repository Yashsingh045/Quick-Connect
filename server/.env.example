# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/quickconnect"

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (for production)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-app-password

# Redis Configuration (for OTP and rate limiting)
REDIS_URL=redis://localhost:6379

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:19006,http://localhost:3000,http://10.254.201.245:19006

# Session Secret (for Express sessions)
SESSION_SECRET=your_session_secret_here
